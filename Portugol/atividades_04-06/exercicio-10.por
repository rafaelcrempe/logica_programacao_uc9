programa {

inclua biblioteca Matematica --> mat

  funcao inicio() {

real valor_deposito, valor_rendimento

escreva("Digite o valor do depósito em poupança: ")
leia(valor_deposito)

valor_rendimento = (valor_deposito * 0.05)

escreva("O valor de rendimento do seu depósito de ", valor_deposito,"R$ após um mês será de: ", valor_rendimento,"R$.")
    
  }
}
